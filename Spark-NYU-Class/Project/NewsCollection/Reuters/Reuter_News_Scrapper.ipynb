    "def convertTimestamp(time_str):\n",
    "    time_arr = time_str.split(\" / \")\n",
    "    date = time_arr[0]\n",
    "    hr_mi = time_arr[1]\n",
    "\n",
    "    datetime_object = datetime.strptime(date+\" \"+hr_mi, '%B %d, %Y %I:%M %p')\n",
    "    adjusted_EST_time = datetime_object + timedelta(hours=4)\n",
    "    return str(adjusted_EST_time)"
   ]
